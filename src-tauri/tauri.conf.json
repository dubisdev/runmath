{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "RunMath",
    "version": "../package.json"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/app-icon.png"
    },
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "clipboard": {
        "writeText": true
      },
      "process": {
        "exit": true
      },
      "window": {
        "create": true,
        "hide": true,
        "close": true,
        "unminimize": true,
        "setFocus": true,
        "show": true,
        "startDragging": true,
        "setSize": true
      },
      "notification": {
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "publisher": "dubis.dev",
      "copyright": "David JimÃ©nez â’¸ 2024",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.dubis.runmath",
      "longDescription": "Do math, quickly ðŸš€",
      "targets": [
        "msi",
        "nsis",
        "updater"
      ],
      "windows": {
        "nsis": {
          "installerIcon": "icons/icon.ico"
        }
      }
    },
    "security": {
      "dangerousDisableAssetCspModification": true,
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline';connect-src api.github.com"
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/kiimesoft/runmath/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFBMzM2NDgwQjQwQzFEOApSV1RZd1VBTFNEYWpBWFpMTlIxSzVYdEhjSDFqTTdPcFkwUEQzVHFsWlZ6a1dGRGFKdHY0UFBmbQo=",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "title": "RunMath",
        "alwaysOnTop": true,
        "fullscreen": false,
        "height": 46,
        "resizable": false,
        "width": 700,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
